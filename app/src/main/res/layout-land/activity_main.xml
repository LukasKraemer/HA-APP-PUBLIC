<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#083045"
    android:textAlignment="center"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_auswertung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="20dp"
        android:background="#3e4f4e"
        android:backgroundTint="#3e4f4e"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Ã–ffne Auswertung"
        android:textColor="#26b839"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_uplaoder_fertig"
        app:layout_constraintTop_toBottomOf="@+id/input_passwort" />

    <TextView
        android:id="@+id/tv_uplaoder_fertig"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:background="#3e4f4e"
        android:paddingTop="10dp"
        android:text="nicht gestartet"
        android:textAlignment="center"
        android:textColor="#26b839"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_upload"
        app:layout_constraintTop_toBottomOf="@+id/input_passwort" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Passwort"
        android:textColor="#26b839"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nutzername" />

    <TextView
        android:id="@+id/tv_nutzername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="Nutzername"
        android:textColor="#26b839"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ip" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="#465a6b"
        android:backgroundTint="#3e4f4e"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="suche nach .txt Datei"
        android:textColor="#26b839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sache_res"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:paddingTop="10dp"
        android:text="nicht gesucht"
        android:textAlignment="center"
        android:textColor="#26b839"
        android:textColorHighlight="#26b839"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="192.168.178.1"
        android:textColor="#26b839"
        app:layout_constraintBottom_toTopOf="@+id/input_nutzername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_search" />

    <EditText
        android:id="@+id/input_passwort"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#26b839"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_nutzername" />

    <EditText
        android:id="@+id/input_nutzername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ftp_nutzer"
        android:textColor="#26b839"
        app:layout_constraintBottom_toTopOf="@+id/input_passwort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_ip" />

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="IP Adresse"
        android:textColor="#26b839"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_search" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:background="#3e4f4e"
        android:backgroundTint="#3e4f4e"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Start Upload"
        android:textColor="#26b839"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password" />

</androidx.constraintlayout.widget.ConstraintLayout>