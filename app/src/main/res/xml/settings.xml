<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme">

    <PreferenceCategory android:title="API">

        <EditTextPreference
            android:defaultValue="0.0.0.0"
            android:icon="@drawable/ic_baseline_cloud_upload_24"
            android:key="key_api_ip"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="0.0.0.0"
            android:title="@string/API_Host" />
        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_baseline_https_24"
            android:key="key_api_protocol"
            android:summary="@string/ssl_support"
            android:title="HTTPS?" />
        <EditTextPreference
            android:key="username"
            android:defaultValue="-"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/username" />
        <EditTextPreference
            android:key="passwd"
            android:defaultValue="-"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/passwd" />
        <EditTextPreference
            android:icon="@drawable/ic_baseline_vpn_key_24"
            android:defaultValue="0.0.0.0"
            android:key="key_api_token"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Token" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/evo">

        <EditTextPreference
            android:defaultValue=""
            android:icon="@drawable/ic_baseline_web_24"
            android:key="key_overview_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary=""
            android:title="@string/evo_ip"
            app:defaultValue="1.1.1.1" />
    </PreferenceCategory>

</PreferenceScreen>